<%- include("partials/hearder") %>
<div class="container-fluid">

<div class="row">
    <div class="col-lg-4">
        <h1 class="" ><i class="fa fa-user" aria-hidden="true"></i> &nbsp;<%= foundUser.username %></h1>
        <p class=""><strong>full names</strong>: <%= foundUser.fullName %></p>
    </div>
        <% foundProducts.forEach(function(prod){ %>
            <div class="col-lg-3 mt-4">
                <div class="card">
                <img class="card-img-top" src="<%= prod.image%> ">  
              </div>
              <div id="bg_col" class="card-body shadow-lg p-4 mb-4">
                <p>
                  <span class="card-title lead text-light" ><strong><%= prod.name%></strong></span>
                  <span class="float-right"><small class="text-muted"><%= moment(prod.createdAt).fromNow() %></small></span>
                </p>
                  <p class="card-text text-light"><%- prod.description.substring(0, 50) %>....<i class="fa fa-chevron-right" aria-hidden="true"></i></p>
                  <p>
                   <a class="btn btn-info btn-sm text-light" href="/items/<%= prod._id %>" > More..</a>
                   <a class="btn btn-success btn-sm float-left mr-1 text-light" href="/items/<%= prod._id %>/reserve" >Reserve?</a>
                 </p>
            </div>
        </div>
        <% }) %> 
</div>
</div>

<%- include("partials/footer") %>