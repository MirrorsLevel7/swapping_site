<%- include("partials/hearder") %> 
  <div class="container-fluid mb-4 mh-100 my-auto">
  <h1 class="display-4 mt-4 mb-4 d-inline">products</h1>
  <div class="row mt-4">
    <% passedItems.forEach(function(item){ %>
     <div class="col-lg-3">
         <div class="card">
           <img class="card-img-top" src="<%= item.image%> ">  
         </div>
         <div id="bg_col" class="card-body shadow-lg p-4 mb-4">
           <p>
             <span class="card-title lead text-light" ><strong><%= item.name%></strong></span>
             <span class="float-right"><small class="text-muted"><%= moment(item.createdAt).fromNow() %></small></span>
           </p>
             <p class="card-text text-light"><%- item.description.substring(0, 50) %>....<i class="fa fa-chevron-right" aria-hidden="true"></i></p>
             <p>
              <a class="btn btn-info btn-sm text-light" href="/items/<%= item._id %>" > More..</a>
              <a class="btn btn-success btn-sm float-left mr-1 text-light" href="/items/<%= item._id %>/reserve" >Reserve?</a>
            </p>
         </div>
     </div>
     <% }) %>
  </div>
</div>
<%- include("partials/footer") %>


